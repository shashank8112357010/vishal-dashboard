{
	"name": "bicycle-shop-monorepo",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"description": "Bicycle Shop Management System - Monorepo with React frontend and Express backend",
	"scripts": {
		"dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
		"dev:server": "tsx watch api/index.ts",
		"dev:client": "vite",
		"dev:frontend-only": "vite --host",
		"dev:backend-only": "tsx watch api/index.ts",
		"build": "npm run build:client && npm run build:server",
		"build:server": "tsc -p api/tsconfig.json",
		"build:client": "vite build",
		"preview": "vite preview",
		"start": "node dist/index.js",
		"seed": "tsx api/utils/seed.ts",
		"seed:users": "tsx api/utils/seedUsers.ts",
		"clean": "rm -rf node_modules dist"
	},
